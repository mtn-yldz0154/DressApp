@using DressApp.WebUi.Identity
@model IEnumerable<User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}




<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>



<table id="example"  class="table table-bordered table-striped table-hover table-dark myTable">

    <tr>
      
        <th>FirstName</th>   
        <th>LastName</th>
        <th>UserName</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">

            <h3>No Users</h3>
        </div>
    }
    @foreach (var item in Model)
    {
        

        <tr>
            <th>@item.FirstName</th>
            <td>@item.LastName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/UserEdit/@item.Id" class="btn btn-warning">Update</a></td>
            <td><a href="/Admin/UserDelete/@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }



</table>

<br />
<a href="/admin/CreateUser" class="btn btn-outline-primary">Create User</a>





